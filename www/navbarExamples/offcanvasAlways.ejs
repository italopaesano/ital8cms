<%- include( passData.themeSys.getThemePartPath( 'head.ejs' ) ) %>

<body>

<%# ========== OFFCANVAS NAVBAR (always hamburger, offcanvas from right) ========== %>
<%- passData.plugin.bootstrapNavbar.render({name: 'offcanvasAlways'}, passData) %>

<div class="container mt-4">
  <h1>Offcanvas Navbar - Always Hamburger</h1>

  <div class="card mt-3">
    <div class="card-header">Caratteristiche di questo esempio</div>
    <div class="card-body">
      <ul>
        <li><strong>type:</strong> <code>offcanvas</code></li>
        <li><strong>bgClass:</strong> <code>bg-dark</code></li>
        <li><strong>offcanvasAlways:</strong> <code>true</code> (hamburger SEMPRE visibile, mai inline)</li>
        <li><strong>position:</strong> <code>end</code> (offcanvas da destra)</li>
      </ul>
    </div>
  </div>

  <div class="card mt-3 border-warning">
    <div class="card-header bg-warning text-dark">offcanvasAlways: true vs false</div>
    <div class="card-body">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th></th>
            <th><code>offcanvasAlways: false</code></th>
            <th><code>offcanvasAlways: true</code></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Sotto breakpoint</td>
            <td>Hamburger + offcanvas</td>
            <td>Hamburger + offcanvas</td>
          </tr>
          <tr>
            <td>Sopra breakpoint</td>
            <td>Navbar inline (espansa)</td>
            <td>Hamburger + offcanvas (sempre)</td>
          </tr>
          <tr>
            <td>Uso tipico</td>
            <td>Navigazione responsive standard</td>
            <td>App mobile-first, interfacce minimal</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="card mt-3">
    <div class="card-header">Codice EJS</div>
    <div class="card-body">
      <pre><code>&lt;%- passData.plugin.bootstrapNavbar.render({name: 'offcanvasAlways'}, passData) %&gt;</code></pre>
    </div>
  </div>

  <p class="mt-3"><a href="/navbarExamples/">&larr; Tutti gli esempi</a></p>
</div>

<%- include( passData.themeSys.getThemePartPath( 'footer.ejs' ) ) %>
