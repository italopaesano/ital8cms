            <%# /EDITABLE %>

            <hr class="my-5">

            <%# Post Footer - Call to Action %>
            <%# EDITABLE name:postFooterCTA type:html editor:wysiwyg label:"Call to Action Finale" description:"Invito all'azione alla fine dell'articolo" %>
            <div class="bg-light p-4 rounded">
                <h3>Ti √® piaciuto questo articolo?</h3>
                <p>Iscriviti alla nostra newsletter per ricevere altri contenuti come questo!</p>
                <button class="btn btn-primary">Iscriviti</button>
            </div>
            <%# /EDITABLE %>

            <%# Author Bio %>
            <div class="mt-5 p-4 border rounded">
                <h4>Sull'autore</h4>
                <%# EDITABLE name:authorBio type:richtext allowedTags:"p,strong,em,a,br" maxlength:300 label:"Bio Autore" description:"Breve biografia dell'autore (max 300 caratteri)" %>
                <p><strong>Nome Autore</strong> √® un esperto di [settore]. Segui su <a href="#">Twitter</a> o visita il <a href="#">sito personale</a>.</p>
                <%# /EDITABLE %>
            </div>
        </div>
    </div>
</article>

<%# Include theme footer %>
<%- await include(getThemePartPath('footer', passData)) %>
