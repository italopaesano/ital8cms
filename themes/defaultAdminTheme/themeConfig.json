  "wwwCustomPathValue": "",

  // Tema amministrativo - DEVE essere true per temi admin
  // I temi admin sono usati solo nelle pagine di amministrazione
  "isAdminTheme": true,

  "pluginDependency": {
    "bootstrap": "^1.0.0",
    "admin": "^1.0.0"
  },
  "nodeModuleDependency": {
    "ejs": "^3.0.0"
  }
}
