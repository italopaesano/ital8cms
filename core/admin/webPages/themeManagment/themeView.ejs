<!-- DETTAGLIO TEMA - Visualizza informazioni complete di un tema -->
<!-- ATTENZIONE nelle pagine di admin sarà chiamata la funzione getAdminThemePartPath() e non la funzione getThemePartPath() -->
<%- include( passData.themeSys.getAdminThemePartPath( 'head.ejs' ) ) %>
<%- include( passData.themeSys.getAdminThemePartPath( 'header.ejs' ) ) %>

<!-- api prefix -->
<span id="apiPrefix" style="display: none;"><%- passData.apiPrefix %></span>
<script>
    const apiPrefix = document.getElementById('apiPrefix').innerText;
</script>

<!-- adminPrefix -->
<span id="adminPrefix" style="display: none;"><%- passData.adminPrefix %></span>
<script>
    const adminPrefix = document.getElementById('adminPrefix').innerText;
</script>

<%
const fs = require('fs');
const path = require('path');

// Ottengo il nome del tema dalla query string
const themeName = passData.query.theme;

let theme = null;
let error = null;

if (!themeName) {
    error = 'Nessun tema specificato. Usa ?theme=nomeTema';
} else {
    const themesPath = path.join(__dirname, '../../../../themes');
    const themeDir = path.join(themesPath, themeName);

    if (!fs.existsSync(themeDir)) {
        error = `Il tema "${themeName}" non esiste.`;
    } else {
        // Leggo informazioni tema
        const configPath = path.join(themeDir, 'config-theme.json');
        const readmePath = path.join(themeDir, 'README.md');
        const viewsPath = path.join(themeDir, 'views');
        const templatesPath = path.join(themeDir, 'templates');

        let config = {};
        let readme = '';
        let viewFiles = [];
        let templateFiles = [];

        if (fs.existsSync(configPath)) {
            config = JSON.parse(fs.readFileSync(configPath, 'utf8'));
        }

        if (fs.existsSync(readmePath)) {
            readme = fs.readFileSync(readmePath, 'utf8');
        }

        if (fs.existsSync(viewsPath)) {
            viewFiles = fs.readdirSync(viewsPath).filter(f => f.endsWith('.ejs'));
        }

        if (fs.existsSync(templatesPath)) {
            templateFiles = fs.readdirSync(templatesPath).filter(f => f.endsWith('.ejs'));
        }

        // Leggo configurazione attuale
        const ital8Conf = require('../../../../ital8Config.json');

        theme = {
            name: themeName,
            config: config,
            readme: readme,
            viewFiles: viewFiles,
            templateFiles: templateFiles,
            path: themeDir,
            isActivePublic: ital8Conf.activeTheme === themeName,
            isActiveAdmin: ital8Conf.adminActiveTheme === themeName
        };
    }
}
%>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-palette"></i>
            <% if (theme) { %>
                Tema: <%= theme.name %>
            <% } else { %>
                Dettaglio Tema
            <% } %>
        </h2>
        <a href="/<%= passData.adminPrefix %>/themeManagment/index.ejs" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Torna alla Lista Temi
        </a>
    </div>

    <% if (error) { %>
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> <%= error %>
        </div>
    <% } else if (theme) { %>

        <!-- Stato Attivazione -->
        <div class="row mb-4">
            <div class="col-12">
                <% if (theme.isActivePublic || theme.isActiveAdmin) { %>
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle"></i>
                        Questo tema è attualmente attivo per:
                        <% if (theme.isActivePublic) { %>
                            <span class="badge bg-primary">Sito Pubblico</span>
                        <% } %>
                        <% if (theme.isActiveAdmin) { %>
                            <span class="badge bg-success">Pannello Admin</span>
                        <% } %>
                    </div>
                <% } else { %>
                    <div class="alert alert-secondary">
                        <i class="bi bi-info-circle"></i>
                        Questo tema non è attualmente attivo.
                    </div>
                <% } %>
            </div>
        </div>

        <div class="row">
            <!-- Colonna Sinistra - Informazioni -->
            <div class="col-md-6">
                <!-- Configurazione -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-gear"></i> Configurazione</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <tbody>
                                <tr>
                                    <th>Nome</th>
                                    <td><%= theme.name %></td>
                                </tr>
                                <tr>
                                    <th>Installato</th>
                                    <td>
                                        <% if (theme.config.isInstalled) { %>
                                            <span class="badge bg-success">Si</span>
                                        <% } else { %>
                                            <span class="badge bg-danger">No</span>
                                        <% } %>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Attivo</th>
                                    <td>
                                        <% if (theme.config.active) { %>
                                            <span class="badge bg-success">Si</span>
                                        <% } else { %>
                                            <span class="badge bg-warning">No</span>
                                        <% } %>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Weight</th>
                                    <td><%= theme.config.weight || 0 %></td>
                                </tr>
                                <tr>
                                    <th>Custom WWW Path</th>
                                    <td>
                                        <% if (theme.config.wwwCustomPath) { %>
                                            <span class="badge bg-info">Si</span>
                                        <% } else { %>
                                            <span class="badge bg-secondary">No</span>
                                        <% } %>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Percorso</th>
                                    <td><small class="text-muted"><%= theme.path %></small></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Dipendenze Plugin -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-plug"></i> Dipendenze Plugin</h5>
                    </div>
                    <div class="card-body">
                        <% if (theme.config.pluginDependency && Object.keys(theme.config.pluginDependency).length > 0) { %>
                            <ul class="list-group list-group-flush">
                                <% Object.entries(theme.config.pluginDependency).forEach(([name, version]) => { %>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span><%= name %></span>
                                        <span class="badge bg-secondary"><%= version %></span>
                                    </li>
                                <% }); %>
                            </ul>
                        <% } else { %>
                            <p class="text-muted mb-0">Nessuna dipendenza plugin</p>
                        <% } %>
                    </div>
                </div>

                <!-- Dipendenze Node Module -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-box"></i> Dipendenze Node Modules</h5>
                    </div>
                    <div class="card-body">
                        <% if (theme.config.nodeModuleDependency && Object.keys(theme.config.nodeModuleDependency).length > 0) { %>
                            <ul class="list-group list-group-flush">
                                <% Object.entries(theme.config.nodeModuleDependency).forEach(([name, version]) => { %>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span><%= name %></span>
                                        <span class="badge bg-secondary"><%= version %></span>
                                    </li>
                                <% }); %>
                            </ul>
                        <% } else { %>
                            <p class="text-muted mb-0">Nessuna dipendenza node modules</p>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Colonna Destra - File e README -->
            <div class="col-md-6">
                <!-- File Views -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-file-earmark-code"></i> File Views (<%= theme.viewFiles.length %>)</h5>
                    </div>
                    <div class="card-body">
                        <% if (theme.viewFiles.length > 0) { %>
                            <ul class="list-group list-group-flush">
                                <% theme.viewFiles.forEach(file => { %>
                                    <li class="list-group-item">
                                        <i class="bi bi-file-earmark-code text-primary"></i>
                                        <%= file %>
                                    </li>
                                <% }); %>
                            </ul>
                        <% } else { %>
                            <p class="text-warning mb-0">
                                <i class="bi bi-exclamation-triangle"></i>
                                Nessun file view trovato
                            </p>
                        <% } %>
                    </div>
                </div>

                <!-- File Templates -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-file-earmark"></i> File Templates (<%= theme.templateFiles.length %>)</h5>
                    </div>
                    <div class="card-body">
                        <% if (theme.templateFiles.length > 0) { %>
                            <ul class="list-group list-group-flush">
                                <% theme.templateFiles.forEach(file => { %>
                                    <li class="list-group-item">
                                        <i class="bi bi-file-earmark text-info"></i>
                                        <%= file %>
                                    </li>
                                <% }); %>
                            </ul>
                        <% } else { %>
                            <p class="text-muted mb-0">Nessun file template</p>
                        <% } %>
                    </div>
                </div>

                <!-- README -->
                <% if (theme.readme) { %>
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-info-circle"></i> README</h5>
                        </div>
                        <div class="card-body">
                            <pre class="bg-light p-3 rounded" style="max-height: 300px; overflow-y: auto; white-space: pre-wrap;"><%= theme.readme %></pre>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Azioni -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-lightning"></i> Azioni</h5>
            </div>
            <div class="card-body">
                <div class="d-flex gap-2 flex-wrap">
                    <% if (!theme.isActivePublic) { %>
                        <button type="button"
                                class="btn btn-primary"
                                onclick="activateTheme('<%= theme.name %>', 'public')">
                            <i class="bi bi-globe"></i> Attiva per Sito Pubblico
                        </button>
                    <% } else { %>
                        <button type="button" class="btn btn-primary" disabled>
                            <i class="bi bi-check"></i> Attivo per Sito Pubblico
                        </button>
                    <% } %>

                    <% if (!theme.isActiveAdmin) { %>
                        <button type="button"
                                class="btn btn-success"
                                onclick="activateTheme('<%= theme.name %>', 'admin')">
                            <i class="bi bi-gear"></i> Attiva per Admin
                        </button>
                    <% } else { %>
                        <button type="button" class="btn btn-success" disabled>
                            <i class="bi bi-check"></i> Attivo per Admin
                        </button>
                    <% } %>
                </div>
            </div>
        </div>

    <% } %>
</div>

<!-- Modal Conferma Attivazione (stesso di index.ejs) -->
<div class="modal fade" id="activateThemeModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Conferma Attivazione Tema</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p id="activateThemeMessage"></p>
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    <strong>Nota:</strong> Per applicare il nuovo tema, potrebbe essere necessario riavviare il server.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                <button type="button" class="btn btn-primary" id="confirmActivateBtn">
                    <i class="bi bi-check"></i> Conferma
                </button>
            </div>
        </div>
    </div>
</div>

<script>
let pendingTheme = null;
let pendingType = null;

function activateTheme(themeName, themeType) {
    pendingTheme = themeName;
    pendingType = themeType;

    const typeLabel = themeType === 'public' ? 'sito pubblico' : 'pannello admin';
    const message = `Vuoi attivare il tema "<strong>${themeName}</strong>" per il ${typeLabel}?`;

    document.getElementById('activateThemeMessage').innerHTML = message;

    const modal = new bootstrap.Modal(document.getElementById('activateThemeModal'));
    modal.show();
}

document.getElementById('confirmActivateBtn').addEventListener('click', async function() {
    if (!pendingTheme || !pendingType) return;

    const btn = this;
    btn.disabled = true;
    btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Attivazione...';

    try {
        const response = await fetch(`/${apiPrefix}/admin/setTheme`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                themeName: pendingTheme,
                themeType: pendingType
            })
        });

        const result = await response.json();

        if (result.success) {
            alert(result.message || 'Tema attivato con successo!');
            window.location.reload();
        } else {
            alert('Errore: ' + (result.error || 'Impossibile attivare il tema'));
        }
    } catch (error) {
        console.error('Errore:', error);
        alert('Errore nella richiesta: ' + error.message);
    } finally {
        btn.disabled = false;
        btn.innerHTML = '<i class="bi bi-check"></i> Conferma';
        bootstrap.Modal.getInstance(document.getElementById('activateThemeModal')).hide();
    }
});
</script>

