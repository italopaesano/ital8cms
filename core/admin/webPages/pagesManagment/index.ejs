<script>
// Dati globali
let themeData = null;
let pagesData = null;

// Carica informazioni tema all'avvio
document.addEventListener('DOMContentLoaded', function() {
    loadThemeInfo();
    loadPagesTree();
});

/**
 * Carica informazioni sul tema attivo
 */
async function loadThemeInfo() {
    try {
        const response = await fetch(`/${apiPrefix}/${adminPrefix}/pages/info`);
        const data = await response.json();

        if (data.success) {
            themeData = data;
            renderThemeInfo(data);
            renderTemplates(data);
        } else {
            document.getElementById('themeInfoCard').innerHTML = `
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle"></i> Errore: ${data.error}
                </div>
            `;
        }
    } catch (error) {
        console.error('Errore caricamento tema:', error);
        document.getElementById('themeInfoCard').innerHTML = `
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-triangle"></i> Errore di rete
            </div>
        `;
    }
}

/**
 * Renderizza informazioni tema
 */
function renderThemeInfo(data) {
    const theme = data.theme;
    const pathTypeLabel = theme.config.wwwPathType === 'custom'
        ? '<span class="badge bg-warning">Custom Path</span>'
        : '<span class="badge bg-success">Standard Path</span>';

    const html = `
        <div class="mb-3">
            <h6 class="text-muted mb-1">Nome Tema</h6>
            <p class="mb-0"><strong>${theme.name}</strong></p>
        </div>
        <div class="mb-3">
            <h6 class="text-muted mb-1">Tipo Path WWW</h6>
            <p class="mb-0">${pathTypeLabel}</p>
        </div>
        <div class="mb-3">
            <h6 class="text-muted mb-1">Configurazione</h6>
            <p class="mb-0">
                <code>wwwCustomPath: ${theme.config.wwwCustomPath}</code>
            </p>
        </div>
        <div class="mb-0">
            <h6 class="text-muted mb-1">Path WWW Attuale</h6>
            <p class="mb-0"><small class="text-muted font-monospace">${theme.paths.wwwPath}</small></p>
        </div>
    `;

    document.getElementById('themeInfoCard').innerHTML = html;
}

/**
 * Renderizza lista template disponibili
 */
function renderTemplates(data) {
    const templates = data.templates;

    if (templates.length === 0) {
        document.getElementById('templatesCard').innerHTML = `
            <div class="alert alert-warning mb-0">
                <i class="bi bi-exclamation-circle"></i> Nessun template disponibile in questo tema.
            </div>
        `;
        return;
    }

    let html = '<div class="list-group list-group-flush">';

    templates.forEach(template => {
        html += `
            <div class="list-group-item px-0">
                <div class="d-flex align-items-center">
                    <i class="bi bi-file-earmark-code text-primary me-2"></i>
                    <div>
                        <strong>${template.displayName}</strong>
                        <br>
                        <small class="text-muted">${template.filename}</small>
                    </div>
                </div>
            </div>
        `;
    });

    html += '</div>';
    html += `<div class="mt-2 text-muted"><small>Totale: ${templates.length} template</small></div>`;

    document.getElementById('templatesCard').innerHTML = html;
}

/**
 * Carica albero pagine/cartelle
 */
async function loadPagesTree() {
    try {
        const response = await fetch(`/${apiPrefix}/${adminPrefix}/pages`);
        const data = await response.json();

        if (data.success) {
            pagesData = data;
            renderTree(data);
        } else {
            document.getElementById('wwwTreeContainer').innerHTML = `
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle"></i> Errore: ${data.error}
                </div>
            `;
        }
    } catch (error) {
        console.error('Errore caricamento tree:', error);
        document.getElementById('wwwTreeContainer').innerHTML = `
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-triangle"></i> Errore di rete
            </div>
        `;
    }
}

/**
 * Costruisce e renderizza albero directory
 */
function renderTree(data) {
    const pages = data.pages;
    const folders = data.folders;

    // Costruisce struttura ad albero
    const tree = buildTree(pages, folders);

    // Renderizza HTML
    const html = renderTreeNode(tree, true);

    // Info statistiche
    const statsHtml = `
        <div class="mb-3 p-2 bg-light rounded">
            <small class="text-muted">
                <i class="bi bi-file-earmark"></i> ${data.pagesCount} pagine ·
                <i class="bi bi-folder"></i> ${data.foldersCount} cartelle
            </small>
        </div>
    `;

    document.getElementById('wwwTreeContainer').innerHTML = statsHtml + html;
}

/**
 * Costruisce struttura ad albero da liste flat
 */
function buildTree(pages, folders) {
    const tree = {
        name: 'www',
        type: 'folder',
        path: '',
        children: []
    };

    // Aggiungi cartelle
    folders.forEach(folder => {
        addToTree(tree, folder.path, 'folder', folder);
    });

    // Aggiungi pagine
    pages.forEach(page => {
        addToTree(tree, page.path, 'file', page);
    });

    return tree;
}

/**
 * Aggiunge un nodo all'albero
 */
function addToTree(tree, path, type, data) {
    const parts = path.split('/').filter(p => p);
    let current = tree;

    parts.forEach((part, index) => {
        const isLast = index === parts.length - 1;

        // Cerca se il nodo esiste già
        let child = current.children.find(c => c.name === part);

        if (!child) {
            child = {
                name: part,
                type: isLast ? type : 'folder',
                path: parts.slice(0, index + 1).join('/'),
                children: [],
                data: isLast ? data : null
            };
            current.children.push(child);
        }

        current = child;
    });
}

/**
 * Renderizza nodo albero ricorsivamente
 */
function renderTreeNode(node, isRoot = false) {
    if (isRoot) {
        // Nodo root (cartella www)
        return `
            <div class="tree-root">
                <div class="tree-node folder-node">
                    <i class="bi bi-folder2-open text-warning"></i>
                    <strong>${node.name}/</strong>
                </div>
                <div class="tree-children ms-3">
                    ${node.children.map(child => renderTreeNode(child)).join('')}
                </div>
            </div>
        `;
    }

    if (node.type === 'folder') {
        const hasChildren = node.children && node.children.length > 0;
        const collapseId = `folder-${node.path.replace(/\//g, '-')}`;

        return `
            <div class="tree-item">
                <div class="tree-node folder-node">
                    ${hasChildren ? `
                        <button class="btn btn-sm btn-link p-0 me-1" type="button"
                                data-bs-toggle="collapse" data-bs-target="#${collapseId}">
                            <i class="bi bi-caret-down-fill"></i>
                        </button>
                    ` : '<span class="me-3"></span>'}
                    <i class="bi bi-folder text-warning"></i>
                    <span>${node.name}/</span>
                    <button class="btn btn-sm btn-outline-danger ms-2" onclick="deleteFolder('${node.path}')" title="Elimina cartella">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
                ${hasChildren ? `
                    <div class="collapse show tree-children ms-4" id="${collapseId}">
                        ${node.children.map(child => renderTreeNode(child)).join('')}
                    </div>
                ` : ''}
            </div>
        `;
    } else {
        // File
        return `
            <div class="tree-item">
                <div class="tree-node file-node">
                    <i class="bi bi-file-earmark-code text-primary"></i>
                    <span>${node.name}</span>
                    <div class="ms-auto">
                        <button class="btn btn-sm btn-outline-primary" onclick="editPage('${node.path}')" title="Modifica">
                            <i class="bi bi-pencil"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" onclick="deletePage('${node.path}')" title="Elimina">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>
            </div>
        `;
    }
}

/**
 * Ricarica albero
 */
function refreshTree() {
    document.getElementById('wwwTreeContainer').innerHTML = `
        <div class="text-center">
            <div class="spinner-border text-info" role="status"></div>
        </div>
    `;
    loadPagesTree();
}

/**
 * Mostra modal crea pagina
 */
function showCreatePageModal() {
    const modal = new bootstrap.Modal(document.getElementById('createPageModal'));
    modal.show();
}

/**
 * Mostra modal crea cartella
 */
function showCreateFolderModal() {
    const modal = new bootstrap.Modal(document.getElementById('createFolderModal'));
    modal.show();
}

/**
 * Modifica pagina (placeholder)
 */
function editPage(path) {
    alert('Modifica pagina: ' + path + '\n\nFunzionalità in sviluppo...');
}

/**
 * Elimina pagina (placeholder)
 */
function deletePage(path) {
    if (confirm('Eliminare la pagina: ' + path + '?')) {
        alert('Funzionalità in sviluppo...');
    }
}

/**
 * Elimina cartella (placeholder)
 */
function deleteFolder(path) {
    if (confirm('Eliminare la cartella: ' + path + '?\n\nATTENZIONE: La cartella deve essere vuota.')) {
        alert('Funzionalità in sviluppo...');
    }
}
</script>

