/**
 * Crea una nuova cartella
 */
async function createFolder() {
    const folderPath = document.getElementById('folderPath').value.trim();
    const messageDiv = document.getElementById('folderCreateMessage');
    const btnCreate = document.getElementById('btnCreateFolder');

    // Validazione
    if (!folderPath) {
        messageDiv.innerHTML = `
            <div class="alert alert-warning mb-0">
                <i class="bi bi-exclamation-triangle"></i>
                Inserisci il nome della cartella
            </div>
        `;
        messageDiv.style.display = 'block';
        return;
    }

    // Validazione caratteri speciali
    if (/[<>:"|?*\\]/.test(folderPath)) {
        messageDiv.innerHTML = `
            <div class="alert alert-danger mb-0">
                <i class="bi bi-exclamation-triangle"></i>
                Il nome contiene caratteri non validi: &lt; &gt; : " | ? * \\
            </div>
        `;
        messageDiv.style.display = 'block';
        return;
    }

    // Disabilita pulsante durante l'operazione
    btnCreate.disabled = true;
    messageDiv.innerHTML = `
        <div class="alert alert-info mb-0">
            <div class="spinner-border spinner-border-sm me-2" role="status"></div>
            Creazione in corso...
        </div>
    `;
    messageDiv.style.display = 'block';

    try {
        const response = await fetch(`/${apiPrefix}/${adminPrefix}/pages/createFolder`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                path: folderPath
            })
        });

        const result = await response.json();

        if (result.success) {
            messageDiv.innerHTML = `
                <div class="alert alert-success mb-0">
                    <i class="bi bi-check-circle"></i>
                    ${result.message}
                </div>
            `;

            // Ricarica albero dopo 1 secondo
            setTimeout(() => {
                refreshTree();
                bootstrap.Modal.getInstance(document.getElementById('createFolderModal')).hide();
            }, 1000);
        } else {
            messageDiv.innerHTML = `
                <div class="alert alert-danger mb-0">
                    <i class="bi bi-exclamation-triangle"></i>
                    <strong>Errore:</strong> ${result.error}
                </div>
            `;
            btnCreate.disabled = false;
        }
    } catch (error) {
        console.error('Errore creazione cartella:', error);
        messageDiv.innerHTML = `
            <div class="alert alert-danger mb-0">
                <i class="bi bi-exclamation-triangle"></i>
                <strong>Errore di rete:</strong> ${error.message}
            </div>
        `;
        btnCreate.disabled = false;
    }
}

