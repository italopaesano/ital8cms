                <i class="bi bi-exclamation-triangle"></i> Errore di rete
            </div>
        `;
    }
}

/**
 * Costruisce e renderizza albero directory
 */
function renderTree(data) {
    const pages = data.pages;
    const folders = data.folders;

    // SALVA stato corrente delle cartelle (quali sono aperte/chiuse)
    const closedFolders = new Set();
    document.querySelectorAll('.tree-children').forEach(el => {
        if (el.classList.contains('collapsed')) {
            closedFolders.add(el.id);
        }
    });

    // Costruisce struttura ad albero
    const tree = buildTree(pages, folders);

    // Renderizza HTML
    const html = renderTreeNode(tree, true);

    // Info statistiche
    const statsHtml = `
        <div class="mb-3 p-2 bg-light rounded">
            <small class="text-muted">
                <i class="bi bi-file-earmark"></i> ${data.pagesCount} pagine ·
                <i class="bi bi-folder"></i> ${data.foldersCount} cartelle
            </small>
        </div>
    `;

    document.getElementById('wwwTreeContainer').innerHTML = statsHtml + html;

    // RIPRISTINA stato delle cartelle che erano chiuse
    closedFolders.forEach(folderId => {
        const el = document.getElementById(folderId);
        if (el) {
            el.classList.add('collapsed');

            // Aggiorna anche l'icona del pulsante toggle
            const button = document.querySelector(`[data-target="${folderId}"]`);
            if (button) {
                const icon = button.querySelector('i');
                if (icon) {
                    icon.classList.remove('bi-caret-down-fill');
                    icon.classList.add('bi-caret-right-fill');
                }
            }
        }
    });

    // Inizializza i toggle delle cartelle con JavaScript puro (senza Bootstrap Collapse)
    initializeFolderToggles();
}

/**
 * Inizializza i toggle delle cartelle usando JavaScript puro
 * Questo evita problemi di compatibilità con Bootstrap Collapse
 */
function initializeFolderToggles() {
    // Trova tutti i pulsanti toggle delle cartelle
    const toggleButtons = document.querySelectorAll('.folder-toggle-btn');

    toggleButtons.forEach(button => {
        button.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();

            const targetId = this.getAttribute('data-target');
            const targetElement = document.getElementById(targetId);
            const icon = this.querySelector('i');

            if (!targetElement) {
                console.error('Elemento non trovato:', targetId);
                return;
            }

            // Toggle visibilità con animazione fluida tramite classe CSS
            targetElement.classList.toggle('collapsed');

            // Aggiorna icona
            if (icon) {
                if (targetElement.classList.contains('collapsed')) {
                    icon.classList.remove('bi-caret-down-fill');
                    icon.classList.add('bi-caret-right-fill');
                } else {
                    icon.classList.remove('bi-caret-right-fill');
                    icon.classList.add('bi-caret-down-fill');
                }
            }
        });
    });
}

/**
 * Costruisce struttura ad albero da liste flat
 */
function buildTree(pages, folders) {
    const tree = {
        name: 'www',
        type: 'folder',
        path: '',
        children: []
    };

    // Aggiungi cartelle
    folders.forEach(folder => {
        addToTree(tree, folder.path, 'folder', folder);
    });

    // Aggiungi pagine
    pages.forEach(page => {
        addToTree(tree, page.path, 'file', page);
    });

    return tree;
}

/**
 * Aggiunge un nodo all'albero
 */
function addToTree(tree, path, type, data) {
    const parts = path.split('/').filter(p => p);
    let current = tree;

    parts.forEach((part, index) => {
        const isLast = index === parts.length - 1;

        // Cerca se il nodo esiste già
        let child = current.children.find(c => c.name === part);

        if (!child) {
            child = {
                name: part,
                type: isLast ? type : 'folder',
                path: parts.slice(0, index + 1).join('/'),
                children: [],
                data: isLast ? data : null
            };
            current.children.push(child);
        }

        current = child;
    });
}

/**
 * Renderizza nodo albero ricorsivamente
 */
function renderTreeNode(node, isRoot = false) {
    if (isRoot) {
        // Nodo root (cartella www)
        return `
            <div class="tree-root">
                <div class="tree-node folder-node">
                    <i class="bi bi-folder2-open text-warning"></i>
                    <strong>${node.name}/</strong>
                </div>
                <div class="tree-children ms-3">
                    ${node.children.map(child => renderTreeNode(child)).join('')}
                </div>
            </div>
        `;
    }

    if (node.type === 'folder') {
        const hasChildren = node.children && node.children.length > 0;
        // ID deterministico basato sul path: stesso path = stesso ID sempre
        // Garantisce zero collisioni e permette di preservare lo stato tra refresh
        const folderId = `folder-${node.path ? node.path.replace(/[\/\s]/g, '-') : 'root'}`;

        return `
            <div class="tree-item">
                <div class="tree-node folder-node">
                    ${hasChildren ? `
                        <button class="btn btn-sm btn-link p-0 me-1 folder-toggle-btn" type="button"
                                data-target="${folderId}">
                            <i class="bi bi-caret-down-fill"></i>
                        </button>
                    ` : '<span class="me-3"></span>'}
                    <i class="bi bi-folder text-warning"></i>
                    <span>${node.name}/</span>
                    <button class="btn btn-sm btn-outline-primary ms-2" onclick="showCreatePageInFolderModal('${node.path}')" title="Crea file nella cartella">
                        <i class="bi bi-file-earmark-plus"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-success ms-1" onclick="showCreateSubfolderModal('${node.path}')" title="Crea sottocartella">
                        <i class="bi bi-folder-plus"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-danger ms-1" onclick="deleteFolder('${node.path}')" title="Elimina cartella">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
                ${hasChildren ? `
                    <div class="tree-children ms-4" id="${folderId}">
                        ${node.children.map(child => renderTreeNode(child)).join('')}
                    </div>
                ` : ''}
            </div>
        `;
    } else {
        // File
        return `
            <div class="tree-item">
                <div class="tree-node file-node">
                    <i class="bi bi-file-earmark-code text-primary"></i>
                    <span>${node.name}</span>
                    <div class="ms-auto">
                        <button class="btn btn-sm btn-outline-primary" onclick="editPage('${node.path}')" title="Modifica">
                            <i class="bi bi-pencil"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" onclick="deletePage('${node.path}')" title="Elimina">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>
            </div>
        `;
    }
}

